= form_for @charge do |f|
  - if @charge.errors.any?
    #error_explanation
      %h2= "#{pluralize(@charge.errors.count, "error")} prohibited this charge from being saved:"
      %ul
        - @charge.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :charged
    = f.text_field :charged
  .field
    = f.label :is_registration_fee
    = f.check_box :is_registration_fee
  .field
    = f.label :is_donation
    = f.check_box :is_donation
  .actions
    = f.submit 'Save'
