= form_for @sponsor do |f|
  - if @sponsor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sponsor.errors.count, "error")} prohibited this sponsor from being saved:"
      %ul
        - @sponsor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, class: "label"
    = f.text_field :name, class: "form-control"
  .field
    = f.label :link, class: "label"
    = f.text_field :link, class: "form-control"
  .field
    = f.label :logo, class: "label"
    = f.file_field :logo, class: "form-control"
  %br
  .actions
    = f.submit 'Save', class: "btn btn-md btn-success"
