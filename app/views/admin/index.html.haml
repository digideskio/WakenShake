.container
  %h1.page-header Admin Panel
  .row
    .col-md-3
      .well
        %h4
          .fa.fa-file-excel-o
          Download Excel
        / = link_to "All donations", donations_path(format: :csv), class: "btn btn-md btn-default btn-block"
        = link_to dancers_path(format: :csv), class: "btn btn-md btn-default btn-block" do
          .fa.fa-user
          Dancers
        = link_to teams_path(format: :csv), class: "btn btn-md btn-default btn-block" do
          .fa.fa-group
          Teams

    .col-md-9
      .panel.panel-default.panel-body
        %h4
          .fa.fa-line-chart
          Stats
        .row.text-center
          .col-md-4
            .thumbnail
              %h5.text-muted Dancers signed up
              %h2=@dancers_count
          .col-md-4
            .thumbnail
              %h5.text-muted Amount raised
              %h2=number_to_currency(@amount_raised)
          .col-md-4
            .thumbnail
              %h5.text-muted Active teams
              %h2=@active_teams
        %hr
        %h4
          .fa.fa-paper-plane
          Mass Email
        = form_for (Dancer.new) do |f|
          .form-group
            = f.text_area :first_name, class: "form-control", rows: 10, placeholder: "Enter a message to email to the dancers"
          .action
            = f.submit
