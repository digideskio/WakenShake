%h1 Listing events

%table
  %thead
    %tr
      %th Title
      %th Text
      %th Place
      %th Date time
      %th
      %th
      %th

  %tbody
    - @events.each do |event|
      %tr
        %td= event.title
        %td= event.text
        %td= event.place
        %td= event.date_time
        %td= link_to 'Show', event
        %td= link_to 'Edit', edit_event_path(event)
        %td= link_to 'Destroy', event, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

