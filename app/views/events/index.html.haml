- if can? :manage, :all
  .container
    .row
      %h2 Events List
      = link_to 'New Event', new_event_path, class: "btn btn-md btn-primary"
      %table.table
        %thead
          %tr
            %th Title
            %th Place
            %th Date/time
            %th
            %th
            %th

        %tbody
          - @events.each do |event|
            %tr
              %td= event.title
              %td= event.place
              %td= event.date_time
              %td= link_to 'Edit', edit_event_path(event)
              %td= link_to 'Destroy', event, :method => :delete, :data => { :confirm => 'Are you sure?' }

      %br
