= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title, class: "label"
    = f.text_field :title, class: "form-control", placeholder: "Enter a title for the event"

  .field
    = f.label :text, class: "label"
    = f.text_area :text, class: "form-control", placeholder: "Enter a description for the event"

  .field
    = f.label :place, class: "label"
    = f.text_field :place, class: "form-control", placeholder: "Location of the event"

  .field
    = f.label :date_time, class: "label"
    = f.datetime_select :date_time, class: "form-control"
  %br
  .actions
    = f.submit 'Save', class: "btn btn-md btn-success btn-block"
