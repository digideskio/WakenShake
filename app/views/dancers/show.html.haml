.container
  .col-md-2
    = image_tag(@dancer.avatar.url, class: "img-circle")

  .col-md-8
    %p#notice= notice

    .page-header
      %h2
        = @dancer.first_name
        = @dancer.last_name
        %small= link_to(@dancer.team.name, @dancer.team)

      %h5 
        Class of 
        = @dancer.year
    %p
      %strong Dancing for
      = @dancer.dancing_for
    .form-inline
      .form-group
        .input-group
          .input-group-addon
            $
            %input.form-control{type: "text", placeholder:"Amount" }
            .input-group-addon .00
          / %script{:src => "https://checkout.stripe.com/checkout.js" class="stripe-button",
          /         :data-key => "<%= Rails.configuration.stripe[:publishable_key] %>",
          /         :data-description => "Donation to Wake 'N Shake",
          /         :data-amount => "500",
          /         :data-label => "Donate to <%= @dancer.first_name %>",
          /         :data-panel-label => "Donate {{amount}}"}

    .progress
      .progress-bar.progress-bar-success.progress-bar-striped{ role: "progressbar",
        aria: { valuenow:"40" },
        aria: { valuemin:"0" },
        aria: { valuemax:"100" },
        style: "width: <%= @dancer.amount_raised %>" }
        %span.sr-only
          = @dancer.amount_raised
          raised!

    .well Susan donated $50 to Nick
    .well Nick donated $25 to Susan
    
    - if can? :manage, :all
      = link_to('Edit', edit_dancer_path(@dancer))
      | 
      = link_to('Delete this dancer', @dancer, method: :delete, data: { confirm: 'Are you sure?' })

  .col-md-2