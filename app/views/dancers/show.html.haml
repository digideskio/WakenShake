.container
  .col-md-2
    %br
    .thumbnail
      = image_tag(@dancer.avatar.url)

  .col-md-8
    .page-header
      %h2
        = @dancer.first_name
        = @dancer.last_name
        %small= link_to(@dancer.team.name, @dancer.team)

      %h5 
        Class of 
        = @dancer.year
      - if can? :manage, :all
        = link_to('Edit', edit_dancer_path(@dancer), class: "btn btn-default btn-md")
        = link_to('Delete this dancer', @dancer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-md")
    %p
      %strong Dancing for
      = @dancer.dancing_for
    .form-inline
      .form-group
        .input-group
          .input-group-addon
            $
          %input.form-control{type: "text", placeholder:"Amount" }
          .input-group-addon .00
          / %script{:src => "https://checkout.stripe.com/checkout.js" class="stripe-button",
          /         :data-key => "<%= Rails.configuration.stripe[:publishable_key] %>",
          /         :data-description => "Donation to Wake 'N Shake",
          /         :data-amount => "500",
          /         :data-label => "Donate to <%= @dancer.first_name %>",
          /         :data-panel-label => "Donate {{amount}}"}

    .progress
      .progress-bar.progress-bar-success.progress-bar-striped{ :role => "progressbar", :aria =>{valuenow:"40"}, :aria => { valuemin:"0" }, :aria => { valuemax:"100" }, :style => "width: 40"}
    %span
      $
      =@dancer.amount_raised
      raised!

    .well Susan donated $50 to Nick
    .well Nick donated $25 to Susan

  .col-md-2
    - if can? :manage, :all
      = link_to "Make a WNS staff member", {controller: "/dancers", action: :set_staff}, class: "btn btn-default btn-md"
      = link_to "Make a WNS website admin", {controller: "/dancers", action: :set_admin}, class: "btn btn-default btn-md"

