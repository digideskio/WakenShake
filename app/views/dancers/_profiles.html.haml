- object.each do |dancer|
  .col-xs-4.col-md-2
    = link_to dancer do
      .thumbnail.thumbnail-fixed-height
        .profile-spaced
          = image_tag(dancer.avatar.url(:medium), class: "center-block img-responsiveimg-square")
        .text-center.caption
          %h4= name(dancer)
          - if dancer.stafftitle.present?
            %h6.text-muted= dancer.stafftitle
