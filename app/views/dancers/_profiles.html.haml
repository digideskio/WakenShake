- object.each do |dancer|
  .col-xs-4.col-md-2
    = link_to dancer do
      .thumbnail.thumbnail-fixed-height
        .profile-spaced{style: "background-image:url(#{dancer.avatar.url(:medium)})"}
        .text-center.caption
          %h4= name(dancer)
          - if dancer.stafftitle.present?
            %h6.text-muted= dancer.stafftitle
