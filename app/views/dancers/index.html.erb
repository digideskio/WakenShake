<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Dancers</h1>
    <%= form_tag(dancers_path, :method => "get", class: "navbar-form", id: "search-form") do %>
      <div class="input-append">
        <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Dancers" %>
        <button class="btn" type="submit"><i class="icon-search"></i></button>
      </div>
    <% end %>
  <table>
    <tbody>
      <% @dancers.each do |dancer| %>
        <tr>
          <td><%= link_to "#{dancer.first_name} #{dancer.last_name}", dancer %></td>
          <td><%= link_to 'Edit', edit_dancer_path(dancer) %></td>
          <td><%= link_to 'Destroy', dancer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>