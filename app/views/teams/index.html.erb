<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="page-header"><div class="text-center"><h1>Teams</h1></div></div>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Amount raised</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= team.name %></td>
          <td><%= team.amount_raised %></td>
          <td><%= link_to 'Show', team %></td>
          <td><%= link_to 'Edit', edit_team_path(team) %></td>
          <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if can? :manage, :all %>
    <%= link_to 'Create a new team', new_team_path %>
  <% end %>
</div>